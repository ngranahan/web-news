<header>

    {{> global/header}}

</header>
<main>
    <div class="container">
    {{!-- Creates a card for each saved article --}}
    {{#each savedArticles}}
    <div class="card horizontal">
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">Article Title<i class="materialize-icons right">more_vert</i></i></span>
            <p>Some body Text</p>
        </div>
        <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i>Article Notes</span>
            <p>Some body text</p>
        </div>
    </div>
    {{/each}}
    </div>
</main>
<footer>

    {{> global/footer}}

</footer>